<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with Pad Number and Patch Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/pad_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/pad_gradient_bg_vibrant"
                android:paddingStart="12dp"
                android:paddingTop="6dp"
                android:paddingEnd="12dp"
                android:paddingBottom="6dp"
                android:text="Pad 1"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/patch_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_gravity="center_vertical"
                android:text="Patch Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- Instrument Type -->
        <TextView
            android:id="@+id/instrument_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Single Instrument"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:background="#F0F0F0"
            android:padding="6dp"
            android:gravity="center" />

        <!-- Instrument Details -->
        <TextView
            android:id="@+id/instrument_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Instrument details"
            android:textSize="14sp"
            android:textColor="#444444"
            android:visibility="gone" />

        <!-- Effects -->
        <TextView
            android:id="@+id/effects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Effects information"
            android:textSize="14sp"
            android:textColor="#444444"
            android:visibility="gone" />

        <!-- Additional Notes -->
        <TextView
            android:id="@+id/additional_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Additional notes"
            android:textSize="14sp"
            android:textColor="#444444"
            android:background="#F8F8F8"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Last Modified -->
        <TextView
            android:id="@+id/last_modified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last modified: Date"
            android:textSize="12sp"
            android:textColor="#888888"
            android:textStyle="italic"
            android:gravity="end" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>